<!-- views/profile.hbs -->

<h1 class="formH1">Rellena la informaci√≥n</h1>

<form class="formProfile" action="/profile?_method=PUT" method="POST">
  <!-- Utiliza un campo oculto para indicar que es una solicitud PUT -->
  <input type="hidden" name="_method" value="PUT">

  <label for="username">
    Username:
    <input type="text" name="username" placeholder="Username" value="{{user.username}}">
  </label>
  <label for="email">
    Email:
    <input type="email" name="email" placeholder="Email" value="{{user.email}}">
  </label>

  <label for="universityStudies">Estudios Universitarios:</label>
  <input type="text" id="universityStudies" name="universityStudies">

  <label for="professionalPath">Trayectoria Profesional:</label>
  <input type="text" id="professionalPath" name="professionalPath">

  <label for="school">Colegio:</label>
  <input type="text" id="school" name="school">

  <label for="leisureAreas">Zonas de Ocio:</label>
  <input type="text" id="leisureAreas" name="leisureAreas">

  <button class="buttonForm" type="submit">Save</button>
</form>
